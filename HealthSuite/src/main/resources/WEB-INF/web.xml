<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
		https://jakarta.ee/xml/ns/jakartaee/web-app_4_0.xsd">

	<display-name>HealthSuite Web Application</display-name>

	<!-- 
		Minimal web.xml for WAR deployment.
		Spring Boot 3.5.x uses Java-based configuration via @Configuration classes.
		- Security: SecurityConfig.java
		- MVC: WebMvcConfig.java
		- Static resources: Automatically handled by Spring Boot from src/main/resources/static/
		- Templates: Thymeleaf templates in src/main/resources/templates/ (auto-configured)
	-->

	<!-- 
		Spring Security filter is automatically registered by Spring Boot
		when SecurityConfig is present. No need to declare it here.
	-->

	<!-- 
		DispatcherServlet is automatically configured by Spring Boot.
		No need for explicit servlet declaration.
	-->

</web-app>
